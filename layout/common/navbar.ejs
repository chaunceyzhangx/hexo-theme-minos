<nav class="navbar is-transparent navbar-main" role="navigation" aria-label="main navigation">
    <div class="container">
        <div class="navbar-brand">
            <a class="navbar-item" href="<%- url_for('/') %>">
                <img src="<%- url_for('images/logo.png') %>" alt="" height="28">
            </a>
            <div class="navbar-burger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <div class="navbar-menu navbar-start">
            <% (site.categories|| []).filter(cat => !cat.parent).each(function (cat) { %>
            <a class="navbar-item <% if (typeof(page.category) !== 'undefined' && page.category === cat.name) { %>is-active<% } %>"
               href="<%- url_for(cat.path) %>"><%= cat.name %></a>
            <% }) %>
            <% for (let i in theme.menu) { let menu = theme.menu[i];%>
            <a class="navbar-item <% if (typeof(page.anchor) !== 'undefined' && page.anchor === menu.anchor) { %>is-active<% } %>"
               href="<%- url_for(menu.path) %>"><%= menu.name %></a>
            <% } %>
        </div>
        <div class="navbar-menu navbar-end">
            <a class="navbar-item" href="javascript:;">
                <i class="fas fa-search"></i>
            </a>
            <a class="navbar-item" href="javascript:;">
                <i class="fab fa-github"></i>
            </a>
        </div>
    </div>
</nav>
