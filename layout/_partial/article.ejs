<article id="<%= post.layout %>-<%= post.slug %>" class="article content" itemscope itemprop="blogPost">
    <h1 class="article-title" itemprop="name">
        <% if (index) { %>
            <a href="<%- url_for(post.link ? post.link : post.path) %>" itemprop="url"><%= post.title %></a>
        <% } else { %>
            <%= post.title %>
        <% } %>
    </h1>
    <div class="article-meta columns is-mobile">
        <span class="column is-narrow">
            <a href="<%- url_for(post.path) %>">
                <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date) %></time>
            </a>
        </span>
        <% if (post.categories && post.categories.length){ %>
        <span class="column is-narrow article-category">
            <i class="far fa-folder"></i>
            <%- list_categories(post.categories, {
                show_count: false,
                class: 'article-category',
                style: 'none',
                separator: '<span>></span>'
            }) %>
        </span>
        <% } %>
        <% if (!index) { %>
        <span class="column">
            <span class="reading-time"></span>&nbsp;<%= __('article.read') %>
            &nbsp;(<span class="word-count"></span>&nbsp;<%= __('article.words') %>)
        </span>
        <% } %>
    </div>
    <div class="article-entry" itemprop="articleBody">
    <% if (post.excerpt && index){ %>
        <%- post.excerpt %>
        <% if (theme.excerpt_link){ %>
        <p class="article-more-link">
            <a href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a>
        </p>
        <% } %>
    <% } else { %>
        <%- post.content %>
    <% } %>
    </div>
    <% if (!index && post.tags.length){ %>
    <div class="columns is-multiline is-mobile article-tags">
    <% post.tags.forEach(tag => { %>
        <span class="column is-narrow"><a href="<%- url_for('tags/' + tag.name) %>"><%= tag.name %></a></span>
    <% }) %>
    </div>
    <% } %>
    <% if (!index && (post.prev || post.next)) { %>
    <div class="columns article-nav">
        <% if (post.prev){ %>
        <span class="column has-text-left article-nav-prev">
            <a href="<%- url_for(post.prev.path) %>" class="has-text-left"><%= post.prev.title %></a>
        </span>
        <% } %>
        <% if (post.next){ %>
        <span class="column has-text-right article-nav-next">
            <a href="<%- url_for(post.next.path) %>" class="has-text-right"><%= post.next.title %></a>
        </span>
        <% } %>
    </div>
    <% } %>
</article>